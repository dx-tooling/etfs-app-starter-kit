{% extends '@common.presentation/base_appshell.html.twig' %}

{% block title %}{{ 'sign_up.title'|trans({}, 'account') }}{% endblock %}

{% block body %}
    <div class="min-h-[60vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8">
            {# Header #}
            <div class="text-center">
                <h1 class="etfswui-h1">
                    {{ 'sign_up.heading'|trans({}, 'account') }}
                </h1>
                <p class="etfswui-text-small mt-2">
                    {{ 'sign_up.subheading'|trans({}, 'account') }}
                </p>
            </div>

            {# Flash Messages #}
            {% for message in app.flashes('error') %}
                <div class="etfswui-alert etfswui-alert-danger">
                    <div class="etfswui-alert-body">
                        <p class="etfswui-alert-danger-text">{{ message }}</p>
                    </div>
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="etfswui-alert etfswui-alert-success">
                    <div class="etfswui-alert-body">
                        <p class="etfswui-alert-success-text">{{ message }}</p>
                    </div>
                </div>
            {% endfor %}

            {# Sign Up Form #}
            <div class="etfswui-card">
                <div class="etfswui-card-content">
                    <form action="{{ path('account.presentation.sign_up') }}" method="post" class="space-y-6">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('sign_up') }}">

                        {# Email Field #}
                        <div>
                            <label for="email" class="etfswui-form-label">
                                {{ 'sign_up.form.email_label'|trans({}, 'account') }}
                            </label>
                            <input
                                id="email"
                                name="email"
                                type="email"
                                autocomplete="email"
                                required
                                placeholder="{{ 'sign_up.form.email_placeholder'|trans({}, 'account') }}"
                                class="etfswui-form-input"
                            >
                        </div>

                        {# Password Field #}
                        <div>
                            <label for="password" class="etfswui-form-label">
                                {{ 'sign_up.form.password_label'|trans({}, 'account') }}
                            </label>
                            <input
                                id="password"
                                name="password"
                                type="password"
                                autocomplete="new-password"
                                required
                                placeholder="{{ 'sign_up.form.password_placeholder'|trans({}, 'account') }}"
                                class="etfswui-form-input"
                            >
                        </div>

                        {# Confirm Password Field #}
                        <div>
                            <label for="password_confirm" class="etfswui-form-label">
                                {{ 'sign_up.form.password_confirm_label'|trans({}, 'account') }}
                            </label>
                            <input
                                id="password_confirm"
                                name="password_confirm"
                                type="password"
                                autocomplete="new-password"
                                required
                                placeholder="{{ 'sign_up.form.password_confirm_placeholder'|trans({}, 'account') }}"
                                class="etfswui-form-input"
                            >
                        </div>

                        {# Submit Button #}
                        <button
                            type="submit"
                            class="etfswui-button-default w-full justify-center"
                        >
                            {{ 'sign_up.form.submit'|trans({}, 'account') }}
                        </button>
                    </form>
                </div>
            </div>

            {# Sign In Link #}
            <p class="text-center etfswui-text-small">
                {{ 'sign_up.has_account'|trans({}, 'account') }}
                <a href="{{ path('account.presentation.sign_in') }}" class="etfswui-link-default font-semibold">
                    {{ 'sign_up.sign_in_link'|trans({}, 'account') }}
                </a>
            </p>

            {# Terms Notice #}
            <p class="text-center text-xs text-dark-500 dark:text-dark-500">
                {{ 'sign_up.terms.intro'|trans({}, 'account') }}
                <a href="#" class="etfswui-link-secondary">{{ 'sign_up.terms.tos'|trans({}, 'account') }}</a>
                {{ 'sign_up.terms.and'|trans({}, 'account') }}
                <a href="#" class="etfswui-link-secondary">{{ 'sign_up.terms.privacy'|trans({}, 'account') }}</a>.
            </p>
        </div>
    </div>
{% endblock body %}
