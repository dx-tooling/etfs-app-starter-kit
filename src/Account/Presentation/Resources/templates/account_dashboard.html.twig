{% extends '@common.presentation/base_fullcontent.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto py-8">
        <h1 class="text-3xl font-bold tracking-tight text-dark-900 dark:text-white mb-8">
            Dashboard
        </h1>

        {# Flash Messages #}
        {% for message in app.flashes('success') %}
            <div class="mb-6 rounded-lg bg-green-50 dark:bg-green-900/20 p-4 border border-green-200 dark:border-green-800">
                <p class="text-sm text-green-800 dark:text-green-300">{{ message }}</p>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="mb-6 rounded-lg bg-red-50 dark:bg-red-900/20 p-4 border border-red-200 dark:border-red-800">
                <p class="text-sm text-red-800 dark:text-red-300">{{ message }}</p>
            </div>
        {% endfor %}

        <div class="grid gap-6 md:grid-cols-2">
            {# Account Card #}
            <div class="bg-white dark:bg-dark-800 rounded-xl shadow-sm border border-dark-200 dark:border-dark-700 p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                        </svg>
                    </div>
                    <h2 class="text-lg font-semibold text-dark-900 dark:text-white">Account</h2>
                </div>

                <dl class="space-y-3">
                    <div>
                        <dt class="text-sm text-dark-500 dark:text-dark-400">Email</dt>
                        <dd class="text-dark-900 dark:text-white font-medium">{{ app.user.email }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-dark-500 dark:text-dark-400">Member since</dt>
                        <dd class="text-dark-900 dark:text-white">{{ app.user.createdAt|date('F j, Y') }}</dd>
                    </div>
                </dl>
            </div>

            {# Active Organization Card #}
            <div class="bg-white dark:bg-dark-800 rounded-xl shadow-sm border border-dark-200 dark:border-dark-700 p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
                        </svg>
                    </div>
                    <h2 class="text-lg font-semibold text-dark-900 dark:text-white">Active Organization</h2>
                </div>

                {% if organizationName %}
                    <p class="text-dark-900 dark:text-white font-medium text-lg mb-2">{{ organizationName }}</p>

                    {# Rename form for owner of current organization #}
                    {% if canRenameCurrentOrganization %}
                        <form action="{{ path('organization.presentation.rename') }}" method="post" class="mt-4">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('rename_organization') }}">
                            <div class="flex gap-2">
                                <input
                                    type="text"
                                    name="name"
                                    placeholder="Enter new name"
                                    value="{{ currentOrganizationRawName }}"
                                    class="flex-1 px-3 py-2 rounded-lg border border-dark-300 dark:border-dark-600 bg-white dark:bg-dark-700 text-dark-900 dark:text-white text-sm placeholder-dark-400 dark:placeholder-dark-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                                >
                                <button type="submit" class="py-2 px-4 rounded-lg bg-primary-600 hover:bg-primary-700 text-white text-sm font-medium transition-colors">
                                    Rename
                                </button>
                            </div>
                        </form>
                    {% endif %}
                {% else %}
                    <p class="text-dark-500 dark:text-dark-400 text-sm mb-4">
                        No organization selected.
                    </p>
                {% endif %}
            </div>
        </div>

        {# Invite Members Card (only for owners) #}
        {% if canInviteToCurrentOrganization %}
            <div class="mt-6 bg-white dark:bg-dark-800 rounded-xl shadow-sm border border-dark-200 dark:border-dark-700 p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
                        </svg>
                    </div>
                    <h2 class="text-lg font-semibold text-dark-900 dark:text-white">Invite Members</h2>
                </div>

                <p class="text-sm text-dark-500 dark:text-dark-400 mb-4">
                    Invite team members to join your organization by email.
                </p>

                <form action="{{ path('organization.presentation.invite') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('invite_member') }}">
                    <div class="flex gap-2">
                        <input
                            type="email"
                            name="email"
                            placeholder="Enter email address"
                            required
                            class="flex-1 px-3 py-2 rounded-lg border border-dark-300 dark:border-dark-600 bg-white dark:bg-dark-700 text-dark-900 dark:text-white text-sm placeholder-dark-400 dark:placeholder-dark-500 focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none"
                        >
                        <button type="submit" class="py-2 px-4 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium transition-colors flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
                            </svg>
                            Send Invite
                        </button>
                    </div>
                </form>

                {# Pending Invitations #}
                {% if pendingInvitations|length > 0 %}
                    <div class="mt-6 pt-4 border-t border-dark-200 dark:border-dark-700">
                        <h3 class="text-sm font-medium text-dark-700 dark:text-dark-300 mb-3">Pending Invitations</h3>
                        <div class="space-y-2">
                            {% for invitation in pendingInvitations %}
                                <div class="flex items-center justify-between py-2 px-3 bg-dark-50 dark:bg-dark-700/50 rounded-lg">
                                    <div class="flex items-center gap-2">
                                        <svg class="w-4 h-4 text-dark-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                                        </svg>
                                        <span class="text-sm text-dark-700 dark:text-dark-300">{{ invitation.email }}</span>
                                    </div>
                                    <div class="flex items-center gap-3">
                                        <span class="text-xs text-dark-500 dark:text-dark-400">
                                            Sent {{ invitation.createdAt|date('M j') }}
                                        </span>
                                        <form action="{{ path('organization.presentation.resend_invitation', { invitationId: invitation.id }) }}" method="post" class="inline">
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('resend_invitation') }}">
                                            <button type="submit" class="text-xs text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 font-medium transition-colors">
                                                Resend
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endif %}

        {# Members Card #}
        {% if members|length > 0 %}
            <div class="mt-6 bg-white dark:bg-dark-800 rounded-xl shadow-sm border border-dark-200 dark:border-dark-700 p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-dark-900 dark:text-white">Members</h2>
                        <p class="text-sm text-dark-500 dark:text-dark-400">{{ members|length }} member{{ members|length != 1 ? 's' : '' }}</p>
                    </div>
                </div>

                <div class="divide-y divide-dark-200 dark:divide-dark-700">
                    {% for member in members %}
                        <div class="py-4 {% if loop.first %}pt-0{% endif %} {% if loop.last %}pb-0{% endif %}">
                            <div class="flex items-start justify-between gap-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-9 h-9 rounded-full bg-dark-100 dark:bg-dark-700 flex items-center justify-center flex-shrink-0">
                                        <span class="text-sm font-medium text-dark-600 dark:text-dark-300">
                                            {{ member.displayName|slice(0, 1)|upper }}
                                        </span>
                                    </div>
                                    <div>
                                        <p class="font-medium text-dark-900 dark:text-white flex items-center gap-2 flex-wrap">
                                            {{ member.displayName }}
                                            {% if member.isOwner %}
                                                <span class="inline-flex items-center rounded-full bg-amber-100 dark:bg-amber-900/30 px-2 py-0.5 text-xs font-medium text-amber-700 dark:text-amber-300">
                                                    Owner
                                                </span>
                                            {% endif %}
                                            {% if member.isCurrentUser %}
                                                <span class="inline-flex items-center rounded-full bg-blue-100 dark:bg-blue-900/30 px-2 py-0.5 text-xs font-medium text-blue-700 dark:text-blue-300">
                                                    You
                                                </span>
                                            {% endif %}
                                        </p>
                                        <p class="text-xs text-dark-500 dark:text-dark-400">{{ member.email }}</p>

                                        {# Show groups this member belongs to #}
                                        {% if groups|length > 0 %}
                                            <div class="mt-2 flex flex-wrap gap-1">
                                                {% for group in groups %}
                                                    {% if group.id in member.groupIds %}
                                                        <span class="inline-flex items-center rounded-md bg-violet-100 dark:bg-violet-900/30 px-2 py-0.5 text-xs font-medium text-violet-700 dark:text-violet-300">
                                                            {{ group.name }}
                                                        </span>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                {# Group management controls for owner (not for themselves) #}
                                {% if isOrganizationOwner and not member.isOwner and groups|length > 0 %}
                                    <div class="flex-shrink-0">
                                        <details class="relative">
                                            <summary class="cursor-pointer py-1 px-2 rounded text-xs text-dark-500 hover:text-dark-700 dark:text-dark-400 dark:hover:text-dark-200 hover:bg-dark-100 dark:hover:bg-dark-700 transition-colors list-none">
                                                <svg class="w-4 h-4 inline" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
                                                </svg>
                                                Manage groups
                                            </summary>
                                            <div class="absolute right-0 mt-1 w-56 bg-white dark:bg-dark-700 rounded-lg shadow-lg border border-dark-200 dark:border-dark-600 z-10 py-2">
                                                <p class="px-3 py-1 text-xs font-medium text-dark-500 dark:text-dark-400 uppercase tracking-wide">Groups</p>
                                                {% for group in groups %}
                                                    {% set isInGroup = group.id in member.groupIds %}
                                                    <div class="px-3 py-1.5 flex items-center justify-between">
                                                        <span class="text-sm text-dark-700 dark:text-dark-300">{{ group.name }}</span>
                                                        {% if isInGroup %}
                                                            <form action="{{ path('organization.presentation.remove_member_from_group', { groupId: group.id }) }}" method="post" class="inline">
                                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('manage_group') }}">
                                                                <input type="hidden" name="member_id" value="{{ member.id }}">
                                                                <button type="submit" class="text-xs text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 font-medium">
                                                                    Remove
                                                                </button>
                                                            </form>
                                                        {% else %}
                                                            <form action="{{ path('organization.presentation.add_member_to_group', { groupId: group.id }) }}" method="post" class="inline">
                                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('manage_group') }}">
                                                                <input type="hidden" name="member_id" value="{{ member.id }}">
                                                                <button type="submit" class="text-xs text-green-600 hover:text-green-700 dark:text-green-400 dark:hover:text-green-300 font-medium">
                                                                    Add
                                                                </button>
                                                            </form>
                                                        {% endif %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </details>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# Groups Card #}
        {% if groups|length > 0 %}
            <div class="mt-6 bg-white dark:bg-dark-800 rounded-xl shadow-sm border border-dark-200 dark:border-dark-700 p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-violet-100 dark:bg-violet-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-dark-900 dark:text-white">Groups</h2>
                        <p class="text-sm text-dark-500 dark:text-dark-400">{{ groups|length }} group{{ groups|length != 1 ? 's' : '' }} in this organization</p>
                    </div>
                </div>

                <div class="divide-y divide-dark-200 dark:divide-dark-700">
                    {% for group in groups %}
                        {% set memberCount = 0 %}
                        {% for member in members %}
                            {% if group.id in member.groupIds %}
                                {% set memberCount = memberCount + 1 %}
                            {% endif %}
                        {% endfor %}
                        <div class="py-3 flex items-center justify-between {% if loop.first %}pt-0{% endif %} {% if loop.last %}pb-0{% endif %}">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-violet-100 dark:bg-violet-900/30 flex items-center justify-center">
                                    <span class="text-xs font-medium text-violet-600 dark:text-violet-400">
                                        {{ group.name|slice(0, 2)|upper }}
                                    </span>
                                </div>
                                <div>
                                    <p class="font-medium text-dark-900 dark:text-white flex items-center gap-2">
                                        {{ group.name }}
                                        {% if group.isDefault %}
                                            <span class="inline-flex items-center rounded-full bg-green-100 dark:bg-green-900/30 px-2 py-0.5 text-xs font-medium text-green-700 dark:text-green-300">
                                                Default
                                            </span>
                                        {% endif %}
                                    </p>
                                    <p class="text-xs text-dark-500 dark:text-dark-400">{{ memberCount }} member{{ memberCount != 1 ? 's' : '' }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# Create New Organization Card #}
        <div class="mt-6 bg-white dark:bg-dark-800 rounded-xl shadow-sm border border-dark-200 dark:border-dark-700 p-6">
            <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                </div>
                <h2 class="text-lg font-semibold text-dark-900 dark:text-white">Create New Organization</h2>
            </div>

            <form action="{{ path('organization.presentation.create') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('create_organization') }}">
                <div class="flex gap-2">
                    <input
                        type="text"
                        name="name"
                        placeholder="Enter organization name"
                        required
                        minlength="1"
                        class="flex-1 px-3 py-2 rounded-lg border border-dark-300 dark:border-dark-600 bg-white dark:bg-dark-700 text-dark-900 dark:text-white text-sm placeholder-dark-400 dark:placeholder-dark-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
                    >
                    <button type="submit" class="py-2 px-4 rounded-lg bg-green-600 hover:bg-green-700 text-white text-sm font-medium transition-colors flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                        Create
                    </button>
                </div>
            </form>
        </div>

        {# Organizations List (if user has multiple) #}
        {% if organizations|length > 0 %}
            <div class="mt-6 bg-white dark:bg-dark-800 rounded-xl shadow-sm border border-dark-200 dark:border-dark-700 p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                        </svg>
                    </div>
                    <h2 class="text-lg font-semibold text-dark-900 dark:text-white">Your Organizations</h2>
                </div>

                <div class="divide-y divide-dark-200 dark:divide-dark-700">
                    {% for org in organizations %}
                        <div class="py-3 flex items-center justify-between {% if loop.first %}pt-0{% endif %} {% if loop.last %}pb-0{% endif %}">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-dark-100 dark:bg-dark-700 flex items-center justify-center">
                                    <span class="text-sm font-medium text-dark-600 dark:text-dark-300">
                                        {{ org.name|slice(0, 1)|upper }}
                                    </span>
                                </div>
                                <div>
                                    <p class="font-medium text-dark-900 dark:text-white">
                                        {{ org.name }}
                                        {% if org.isActive %}
                                            <span class="ml-2 inline-flex items-center rounded-full bg-green-100 dark:bg-green-900/30 px-2 py-0.5 text-xs font-medium text-green-700 dark:text-green-300">
                                                Active
                                            </span>
                                        {% endif %}
                                    </p>
                                    <p class="text-xs text-dark-500 dark:text-dark-400">
                                        {% if org.isOwned %}Owned by you{% else %}Member{% endif %}
                                    </p>
                                </div>
                            </div>

                            {% if not org.isActive %}
                                <form action="{{ path('organization.presentation.switch', { organizationId: org.id }) }}" method="post">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('switch_organization') }}">
                                    <button type="submit" class="py-1.5 px-3 rounded-lg border border-dark-300 dark:border-dark-600 text-sm font-medium text-dark-700 dark:text-dark-300 hover:bg-dark-50 dark:hover:bg-dark-700 transition-colors">
                                        Switch
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# Sign Out #}
        <div class="mt-8 pt-6 border-t border-dark-200 dark:border-dark-700">
            <form action="{{ path('account.presentation.sign_out') }}" method="post" class="inline">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                <button type="submit" class="text-sm text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 font-medium transition-colors">
                    Sign out
                </button>
            </form>
        </div>
    </div>
{% endblock body %}
