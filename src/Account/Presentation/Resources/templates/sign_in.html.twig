{% extends '@common.presentation/base_appshell.html.twig' %}

{% block title %}{{ 'sign_in.title'|trans({}, 'account') }}{% endblock %}

{% block body %}
    <div class="min-h-[60vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8">
            {# Header #}
            <div class="text-center">
                <h1 class="etfswui-h1">
                    {{ 'sign_in.heading'|trans({}, 'account') }}
                </h1>
                <p class="etfswui-text-small mt-2">
                    {{ 'sign_in.subheading'|trans({}, 'account') }}
                </p>
            </div>

            {# Flash Messages #}
            {% for message in app.flashes('error') %}
                <div class="etfswui-alert etfswui-alert-danger">
                    <div class="etfswui-alert-body">
                        <p class="etfswui-alert-danger-text">{{ message }}</p>
                    </div>
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="etfswui-alert etfswui-alert-success">
                    <div class="etfswui-alert-body">
                        <p class="etfswui-alert-success-text">{{ message }}</p>
                    </div>
                </div>
            {% endfor %}

            {# Sign In Form #}
            <div class="etfswui-card">
                <div class="etfswui-card-content">
                    <form action="{{ path('account.presentation.sign_in') }}" method="post" class="space-y-6">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# Email Field #}
                        <div>
                            <label for="email" class="etfswui-form-label">
                                {{ 'sign_in.form.email_label'|trans({}, 'account') }}
                            </label>
                            <input
                                id="email"
                                name="email"
                                type="email"
                                autocomplete="email"
                                required
                                value="{{ last_username }}"
                                placeholder="{{ 'sign_in.form.email_placeholder'|trans({}, 'account') }}"
                                class="etfswui-form-input"
                            >
                        </div>

                        {# Password Field #}
                        <div>
                            <label for="password" class="etfswui-form-label">
                                {{ 'sign_in.form.password_label'|trans({}, 'account') }}
                            </label>
                            <input
                                id="password"
                                name="password"
                                type="password"
                                autocomplete="current-password"
                                required
                                placeholder="{{ 'sign_in.form.password_placeholder'|trans({}, 'account') }}"
                                class="etfswui-form-input"
                            >
                        </div>

                        {# Error Message #}
                        {% if error %}
                            <div class="etfswui-alert etfswui-alert-danger">
                                <div class="etfswui-alert-body">
                                    <p class="etfswui-alert-danger-text">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </p>
                                </div>
                            </div>
                        {% endif %}

                        {# Submit Button #}
                        <button
                            type="submit"
                            class="etfswui-button-default w-full justify-center"
                        >
                            {{ 'sign_in.form.submit'|trans({}, 'account') }}
                        </button>
                    </form>
                </div>
            </div>

            {# Sign Up Link #}
            <p class="text-center etfswui-text-small">
                {{ 'sign_in.no_account'|trans({}, 'account') }}
                <a href="{{ path('account.presentation.sign_up') }}" class="etfswui-link-default font-semibold">
                    {{ 'sign_in.create_account_link'|trans({}, 'account') }}
                </a>
            </p>
        </div>
    </div>
{% endblock body %}
