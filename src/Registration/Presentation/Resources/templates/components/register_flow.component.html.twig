{# @var this \App\Registration\Presentation\Component\RegisterFlowComponent #}

<div {{ attributes }}>
    {% if this.isComplete %}
        {# Success State - Redirect will happen, but show a nice message #}
        <div class="min-h-[70vh] flex items-center justify-center">
            <div class="text-center">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-success-500 to-success-600 mb-6 shadow-lg shadow-success-500/25">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-dark-900 dark:text-white mb-2">Welcome aboard!</h2>
                <p class="text-dark-500 dark:text-dark-400">Your account has been created. Redirecting...</p>
                <script>setTimeout(() => window.location.href = '{{ path('content.presentation.homepage') }}', 1500);</script>
            </div>
        </div>
    {% else %}
        <div class="min-h-[70vh] flex items-center justify-center">
            <div class="w-full max-w-md">
                {# Card container with subtle gradient border effect #}
                <div class="relative">
                    <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-primary-500 rounded-2xl blur opacity-20 dark:opacity-30"></div>
                    <div class="relative bg-white dark:bg-dark-800 rounded-2xl shadow-xl border border-dark-200/50 dark:border-dark-700/50 p-8 sm:p-10">

                        {# Progress Bar #}
                        <div class="mb-8">
                            <div class="flex justify-between text-xs font-medium text-dark-500 dark:text-dark-400 mb-2">
                                <span>Step {{ this.currentStep }} of 3</span>
                                <span>{{ this.progressPercentage }}%</span>
                            </div>
                            <div class="h-2 bg-dark-200 dark:bg-dark-700 rounded-full overflow-hidden">
                                <div
                                    class="h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full transition-all duration-500 ease-out"
                                    style="width: {{ this.progressPercentage }}%"
                                ></div>
                            </div>
                        </div>

                        {# Step Indicators #}
                        <div class="flex justify-center gap-3 mb-8">
                            {% for step in 1..3 %}
                                <div class="flex items-center justify-center w-10 h-10 rounded-full text-sm font-semibold transition-all duration-300
                                    {% if step < this.currentStep %}
                                        bg-success-500 text-white
                                    {% elseif step == this.currentStep %}
                                        bg-gradient-to-br from-indigo-500 to-purple-600 text-white shadow-lg shadow-indigo-500/25
                                    {% else %}
                                        bg-dark-200 dark:bg-dark-700 text-dark-500 dark:text-dark-400
                                    {% endif %}
                                ">
                                    {% if step < this.currentStep %}
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                    {% else %}
                                        {{ step }}
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>

                        {# Error Message #}
                        {% if this.errorMessage %}
                            <div class="mb-6 p-4 rounded-xl bg-danger-50 dark:bg-danger-900/20 border border-danger-200 dark:border-danger-800">
                                <div class="flex items-start gap-3">
                                    <svg class="w-5 h-5 text-danger-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                    </svg>
                                    <p class="text-sm font-medium text-danger-700 dark:text-danger-300">{{ this.errorMessage }}</p>
                                </div>
                            </div>
                        {% endif %}

                        {# Step 1: Email & Password #}
                        {% if this.currentStep == 1 %}
                            <div class="text-center mb-8">
                                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 mb-4 shadow-lg shadow-indigo-500/25">
                                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <h1 class="text-2xl font-bold text-dark-900 dark:text-white tracking-tight">Create your account</h1>
                                <p class="mt-2 text-sm text-dark-500 dark:text-dark-400">Enter your email and choose a password</p>
                            </div>

                            <div class="space-y-5">
                                <div>
                                    <label for="email" class="block text-sm font-semibold text-dark-700 dark:text-dark-300 mb-2">Email address</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                            </svg>
                                        </div>
                                        <input
                                            type="email"
                                            id="email"
                                            data-model="email"
                                            placeholder="your@email.com"
                                            value="{{ this.email }}"
                                            class="block w-full pl-11 pr-4 py-3 border border-dark-300 dark:border-dark-600 rounded-xl bg-white dark:bg-dark-700 text-dark-900 dark:text-white placeholder-dark-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                                        >
                                    </div>
                                </div>

                                <div>
                                    <label for="password" class="block text-sm font-semibold text-dark-700 dark:text-dark-300 mb-2">Password</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                            </svg>
                                        </div>
                                        <input
                                            type="password"
                                            id="password"
                                            data-model="password"
                                            placeholder="••••••••"
                                            value="{{ this.password }}"
                                            class="block w-full pl-11 pr-4 py-3 border border-dark-300 dark:border-dark-600 rounded-xl bg-white dark:bg-dark-700 text-dark-900 dark:text-white placeholder-dark-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                                        >
                                    </div>
                                    <p class="mt-2 text-xs text-dark-500 dark:text-dark-400">At least 8 characters</p>
                                </div>
                            </div>
                        {% endif %}

                        {# Step 2: Name #}
                        {% if this.currentStep == 2 %}
                            <div class="text-center mb-8">
                                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 mb-4 shadow-lg shadow-indigo-500/25">
                                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                </div>
                                <h1 class="text-2xl font-bold text-dark-900 dark:text-white tracking-tight">What's your name?</h1>
                                <p class="mt-2 text-sm text-dark-500 dark:text-dark-400">Let us know what to call you</p>
                            </div>

                            <div>
                                <label for="name" class="block text-sm font-semibold text-dark-700 dark:text-dark-300 mb-2">Full name</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <input
                                        type="text"
                                        id="name"
                                        data-model="name"
                                        placeholder="John Doe"
                                        value="{{ this.name }}"
                                        autofocus
                                        class="block w-full pl-11 pr-4 py-3 border border-dark-300 dark:border-dark-600 rounded-xl bg-white dark:bg-dark-700 text-dark-900 dark:text-white placeholder-dark-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                                    >
                                </div>
                            </div>
                        {% endif %}

                        {# Step 3: Organization #}
                        {% if this.currentStep == 3 %}
                            <div class="text-center mb-8">
                                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 mb-4 shadow-lg shadow-indigo-500/25">
                                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                    </svg>
                                </div>
                                <h1 class="text-2xl font-bold text-dark-900 dark:text-white tracking-tight">Name your organization</h1>
                                <p class="mt-2 text-sm text-dark-500 dark:text-dark-400">This is where your team will collaborate</p>
                            </div>

                            <div>
                                <label for="organizationName" class="block text-sm font-semibold text-dark-700 dark:text-dark-300 mb-2">Organization name</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                    <input
                                        type="text"
                                        id="organizationName"
                                        data-model="organizationName"
                                        placeholder="Acme Inc."
                                        value="{{ this.organizationName }}"
                                        autofocus
                                        class="block w-full pl-11 pr-4 py-3 border border-dark-300 dark:border-dark-600 rounded-xl bg-white dark:bg-dark-700 text-dark-900 dark:text-white placeholder-dark-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
                                    >
                                </div>
                            </div>
                        {% endif %}

                        {# Navigation Buttons #}
                        <div class="mt-8 flex gap-3">
                            {% if not this.isFirstStep %}
                                <button
                                    type="button"
                                    data-action="live#action"
                                    data-live-action-param="previousStep"
                                    class="flex-1 flex justify-center items-center gap-2 py-3 px-4 border-2 border-dark-200 dark:border-dark-600 rounded-xl text-sm font-semibold text-dark-700 dark:text-dark-300 bg-transparent hover:bg-dark-50 dark:hover:bg-dark-700/50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 dark:focus:ring-offset-dark-800 transition-all duration-200"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                    </svg>
                                    Back
                                </button>
                            {% endif %}

                            {% if this.isLastStep %}
                                <button
                                    type="button"
                                    data-action="live#action"
                                    data-live-action-param="submit"
                                    class="flex-1 flex justify-center items-center gap-2 py-3 px-4 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white bg-gradient-to-r from-success-600 to-success-500 hover:from-success-500 hover:to-success-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-success-500 dark:focus:ring-offset-dark-800 transition-all duration-200 transform hover:scale-[1.02]"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Create account
                                </button>
                            {% else %}
                                <button
                                    type="button"
                                    data-action="live#action"
                                    data-live-action-param="nextStep"
                                    class="flex-1 flex justify-center items-center gap-2 py-3 px-4 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-dark-800 transition-all duration-200 transform hover:scale-[1.02]"
                                >
                                    Continue
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                </button>
                            {% endif %}
                        </div>

                        {# Login link #}
                        <div class="mt-8 text-center">
                            <p class="text-sm text-dark-500 dark:text-dark-400">
                                Already have an account?
                                <a href="{{ path('security.presentation.login') }}" class="font-medium text-primary-600 hover:text-primary-500 dark:text-primary-400 dark:hover:text-primary-300">
                                    Sign in
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
